{
    "name": "log4njs",
    "version": "1.0.1",
    "description": "A very simple log utility for nodejs",
    "main": "src/index.js",
    "scripts": {
        "lint": "eslint --max-warnings 0 src"
        "test:unit": "nyc node_modules/.bin/_mocha ./tests/unit",
        "coverage": "nyc check-coverage --statement 100 --branches 100 --functions 100 --lines 100 --reporter=html",
        "test": "npm run lint && npm run test:unit && npm run coverage",
        "prepublishOnly": "npm test && npm prune --production"
    },
    "author": "Carl Nordenfelt <carl@bynordenfelt.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/carlnordenfelt/log4njs"
    },
    "files": [
        "src"
    ],
    "keywords": [
        "nodejs",
        "logging",
        "logger"
    ],
    "issues": {
        "url": "https://github.com/carlnordenfelt/log4njs/issues"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "eslint": "5.9.0",
        "eslint-config-defaults": "9.0.0",
        "eslint-plugin-filenames": "1.3.2",
        "eslint-plugin-import": "2.14.0",
        "mocha": "^5.2.0",
        "mockery": "^2.1.0",
        "sinon": "^7.1.1",
        "sinon-chai": "^3.2.0",
        "nyc": "^13.1.0"
    }
}
