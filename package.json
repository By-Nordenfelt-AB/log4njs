{
    "name": "log4njs",
    "version": "3.0.0b",
    "description": "A very simple log utility for nodejs",
    "type": "module",
    "main": "_dist/index.js",
    "files": [
        "_dist"
    ],
    "scripts": {
        "lint": "eslint --ext .ts --max-warnings 0 src",
        "test:unit": "nyc --all --include 'src/**/*.ts' ts-mocha 'tests/unit/**/*.ts' && npm run report",
        "coverage": "nyc check-coverage --statement 100 --branches 100 --functions 100 --lines 100",
        "test": "npm run lint && npm run test:unit && npm run coverage",
        "report": "nyc report --reporter=html",
        "coverage:report": "nyc report --reporter=text-lcov | coveralls",
        "prepublishOnly": "rm -rf ./_dist && npm ci && npm test && npm prune --production && npm run build",
        "build": "rm -rf _dist && tsc"
    },
    "devDependencies": {
        "@types/chai": "^4.3.0",
        "@types/expect": "^24.3.0",
        "@types/mocha": "^8.2.3",
        "@types/node": "14.x",
        "@types/sinon": "^10.0.11",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "chai": "^4.3.6",
        "coveralls": "^3.1.1",
        "eslint": "^8.12.0",
        "eslint-config-defaults": "9.0.0",
        "eslint-plugin-filenames": "1.3.2",
        "eslint-plugin-import": "^2.25.4",
        "mocha": "9.2.2",
        "nyc": "^15.1.0",
        "sinon": "^13.0.1",
        "ts-mocha": "^9.0.2",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3"
    },
    "author": "Carl Nordenfelt <carl@bynordenfelt.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/carlnordenfelt/log4njs"
    },
    "keywords": [
        "nodejs",
        "logging",
        "logger"
    ],
    "issues": {
        "url": "https://github.com/carlnordenfelt/log4njs/issues"
    }
}
