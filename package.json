{
    "name": "log4njs",
    "version": "3.0.2",
    "description": "A very simple log utility for nodejs & typescript",
    "main": ".dist/index.js",
    "types": ".dist/index.d.ts",
    "scripts": {
        "clean": "rm -rf node_modules package-lock.json .dist .coverage",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json",
        "test:unit": "jest --config jest.config.json",
        "test": "npm run lint && npm run test:unit",
        "prepublishOnly": "npm test && npm run build"
    },
    "author": "Carl Nordenfelt <carl@bynordenfelt.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/carlnordenfelt/log4njs"
    },
    "files": [
        ".dist/**/*"
    ],
    "keywords": [
        "nodejs",
        "logging",
        "logger"
    ],
    "issues": {
        "url": "https://github.com/carlnordenfelt/log4njs/issues"
    },
    "devDependencies": {
        "@types/jest": "^29.2.3",
        "@types/node": "^18.11.9",
        "jest": "^29.3.1",
        "prettier": "^2.8.0",
        "ts-jest": "^29.0.3",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.9.3"
    }
}
